.etabs
    :margin 0
    :padding 0
    .tab
        :display inline-block

        a
            :font-size 1.125rem
            :color #959595
            :line-height 2em
            :display block
            :padding 0 10px
            :outline none
        a:hover
            :text-decoration underline
        a.active
            :color #7a868c

    .tab.active
        :border solid 1px #959595
        :border-bottom 1px solid #fff
        :padding-top 6px
        :position relative
        :top 1px

.tab-container .panel-container
    :background #fff
    :border solid #959595 1px
    :padding 10px
    :-moz-border-radius 0 4px 4px 4px
    :-webkit-border-radius 0 4px 4px 4px
.tab-content
    :border solid #959595 1px

    h1
        :color #555555
        :font-size 1.125rem
        :padding-bottom 40px
    p
        :color #7a868c
        :font-size 1.125rem
.tab-content-inner
    :padding-top 45px
    :padding-bottom 65px
table
    :border-spacing none !important