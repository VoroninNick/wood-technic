/* style for .voronin-block-wrap */

ul.voronin-block-wrap
    margin-left: 0 !important

    li
        list-style: none
        float: left
        p
            font-size: 0.875rem
            color: #b7b7b7
            font-family: inherit
            white-space: nowrap
            margin-bottom: 0
            padding-top: 0px

            a
                color: inherit
                text-decoration: none
                border-bottom: 1px solid rgba(183, 183, 183, 0.3)
                font-family: inherit

            a:hover
                color: #94d60a
                border-bottom: 1px solid rgba(148, 214, 10, 0.8)
        svg
            /*width: 77px*/
            /*height: 82px*/
            path
                fill: rgba(183, 183, 183, 1)
    li.vbw-image
        padding-top: 5px

    li.vbw-image a:hover path
        fill: rgba(148, 214, 10, 1)
        -webkit-transition: all 1s
        -moz-transition: all 1s
        -o-transition: all 1s
        transition: all 1s

    li.vbw-text
        width: 80%
        padding: 4% 0 0 5%

/*end*/

/*form*/

.d-v-time
