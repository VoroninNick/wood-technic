/* all */
::-webkit-input-placeholder {
    color:#e2e2e2 !important;
    font-style: italic !important;
    font-weight: 100 !important;
}
::-moz-placeholder {
    color:#e2e2e2 !important;
    font-style: italic !important;
    font-weight: 100 !important;
} /* firefox 19+ */
:-ms-input-placeholder {
    color:#e2e2e2 !important;
    font-style: italic !important;
    font-weight: 100 !important;
} /* ie */
input:-moz-placeholder {
    color:#e2e2e2 !important;
    font-style: italic !important;
    font-weight: 100 !important;
}
/*styling form*/
label {
    color: #94d60a !important;
    font-size: 1rem !important;
    font-family: Tinos;
    margin-left: 1.575rem;
}
input {
    height: 52px !important;
}
input, textarea {
    font-size: 1.5rem !important;
    padding-left: 1.575rem !important;
    font-weight: 100 !important;
    font-family: Tinos !important;
    color: #94d60a !important;
    margin: 0 0 0.7rem 0 !important;
    border-color: #b2b2b2 !important;
}
input:focus, textarea:focus {
    background: #ffffff !important;
    border-color: #b2b2b2 !important;
    outline: none !important;
    box-shadow: none !important;
}
select:focus {
    border-color: #b2b2b2 !important;
    outline: none !important;
    box-shadow: none !important;
}

textarea {
    min-height: 228px;
    margin-bottom: 45px !important;
}
select {
    font-size: 1.5rem !important;
    font-weight: 100 !important;
    font-family: "Century Gothic" !important;
    color: #7a868c !important;
    border-color: #b2b2b2 !important;
    height: auto !important;
    padding: 0.3rem 0.6rem !important;
}
/*.d-v-time select*/
.form-actions button {
    text-transform: uppercase;
    color: #ffffff;
    font-size: 1.75rem;
    background: #94d60a;
    padding: 11px 25px !important;
}
.form-actions button:hover {
    color: #94d60a;
    background: #ffffff;
    border: 1px solid #94d60a;
    -webkit-transition: none !important;
    -moz-transition: none !important;
    transition: none !important;
    padding: 10px 24px !important
}
.ph {
    width: 100%;
    height: 27px;
}
/*end form*/
option:hover {
    background: green !important;
}
.reveal-modal {
    padding: 0 !important;
    border: none !important;
    box-shadow: none !important;
}

.no-padd-left {
    padding-left: 0 !important;
}
.no-padd-right {
    padding-right: 0 !important;
}
.reveal-modal-bg {
    -webkit-filter: blur(3px) !important;
    -moz-filter: blur(3px) !important;
    -o-filter: blur(3px) !important;
    -ms-filter: blur(3px) !important;
    filter: blur(3px) !important;
    background: rgba(255, 255, 255, 0.85) !important;
}
#order-louver-form option:checked, option:hover {
    background-color: rgb(148, 214, 10) !important;
    color: white !important;
}
.close-fancy_form {
    position: absolute;
    top: 0.4rem !important;
    right: 0.8875rem !important;
}
input#gsc-i-id1 {
    height: 44px !important;
    color: #ffffff !important;
}