@mixin rotate($seconds, $rotdeg)
    :-webkit-transition-duration #{$seconds}s
    :-moz-transition-duration #{$seconds}s
    :-o-transition-duration #{$seconds}s
    :transition-duration #{$seconds}s

    :-webkit-transition-property -webkit-transform
    :-moz-transition-property -moz-transform
    :-o-transition-property -o-transform
    :transition-property transform

    :overflow hidden

    &:hover
        :-webkit-transform rotate(#{$rotdeg}deg)
        :-moz-transform rotate(#{$rotdeg}deg)
        :-o-transform rotate(#{$rotdeg}deg)

.rotate
    @include rotate(0.8,360)


