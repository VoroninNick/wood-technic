.production-bar-wrapper
    .columns
        :padding 0!important
    a
        :display block
        :height 100%
        :width 100%

.prod-bar
    :position relative
    :height 600px
    :opacity 0.6
    .prod-bar-content
        :position relative
        :top 25%
        :height 280px
        :width 240px
        :margin 0 auto
        h1
            :font-size 3rem
            :font-weight 700
        h3
            :font-size 1.5rem
        h1, h4
            :color #fff
        h1, h4, a
            :text-align center
        .ltc
            span
                :display block
                :color #fff
                :border 1px solid #fff
                :font-size 1.875rem
                :padding 13px 20px

            span:hover
                :background #94d60a
                :border none
                :padding 15px 22px
    a
        :display block
        :-webkit-filter blur(3px)
        :-moz-filter blur(3px)
        :-o-filter blur(3px)
        :-ms-filter blur(3px)
        :filter blur(3px)
        :opacity 0.95
        :transition 0.4s ease-out all
        :-webkit-transition 0.4s ease-out all

    .ltc
        :position absolute
        :bottom 0
.prod-bar:hover
    :transition 0.4s ease-out all
    :-webkit-transition 0.4s ease-out all
    :opacity 1
    a
        :opacity 1
        :-webkit-filter blur(0px)
        :-moz-filter blur(0px)
        :-o-filter blur(0px)
        :-ms-filter blur(0px)
        :filter blur(0px)

.prod-bar:hover:before
    :content ''
    :display block
    :background url("<%= asset_path('Shadow-production-left.png') %>")no-repeat
    :height 100%
    :width 15px
    :position absolute
    :left -15px
    :top 0
.prod-bar:hover:after
    :content ''
    :display block
    :background url("<%= asset_path('Shadow-production.png') %>")no-repeat
    :height 100%
    :width 15px
    :position absolute
    :top 0
    :right -15px

.door-interior
    :background url("<%= asset_path('door-interior.jpg') %>")no-repeat center
.door-louver
    :background url("<%= asset_path('3770559_original.png') %>")no-repeat center
.mdf
